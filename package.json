{
  "name": "floworx-profile-system",
  "version": "2.0.0",
  "description": "Enhanced Floworx Profile System with Integrated Improvements",
  "type": "module",
  "scripts": {
    "validate-contracts": "node scripts/validate-contracts.js",
    "validate-ai-schemas": "tsx src/scripts/validate-ai-schema.ts",
    "validate-behaviors": "tsx src/scripts/validate-behavior-json.ts",
    "validate-labels": "tsx src/scripts/validate-label-schema.ts",
    "validate-schemas": "tsx src/scripts/validate-all-schemas.ts",
    "validate-schemas:report": "tsx src/scripts/validate-all-schemas.ts report",
    "validate-schemas:consistency": "tsx src/scripts/validate-all-schemas.ts consistency",
    "dev": "vite",
    "dev:backend": "cd backend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "start": "npm run dev:full",
    "start:proxy": "node start-n8n-proxy.js",
    "start:all": "concurrently \"npm run dev\" \"npm run start:proxy\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --coverage tests/unit",
    "test:integration": "vitest run --coverage tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:db": "node tests/__fixtures__/test-seed.sql",
    "test:voice-analysis": "vitest run tests/unit/emailVoiceAnalyzer.test.js",
    "test:contract": "jest tests/unifiedProfileManager.contract.test.js",
    "test:golden": "jest tests/n8nConfigMapper.golden.test.js",
    "test:props": "jest tests/unifiedProfileManager.props.test.js",
    "test:error": "jest tests/robustErrorHandler.behavior.test.js",
    "test:cache": "jest tests/performanceOptimizer.cache.test.js",
    "smoke:build-n8n": "node scripts/smoke-build.js",
    "smoke:features": "node scripts/smoke-build.js electrician hvac pools",
    "precommit": "npm run test:all && npm run smoke:build-n8n",
    "lint": "eslint src/ tests/ scripts/",
    "lint:fix": "eslint src/ tests/ scripts/ --fix",
    "build": "vite build",
    "build:ci": "npm run test:all && npm run lint && vite build",
    "verify-build": "node scripts/verify-build.js",
    "deploy:staging": "npm run build:ci && npm run smoke:build-n8n",
    "deploy:production": "npm run build:ci && npm run smoke:build-n8n",
    "ops:dashboard": "node scripts/operations-dashboard.js",
    "ops:health": "node scripts/monitor-system-health.js",
    "ops:validate-creds": "node scripts/validate-n8n-credentials.js",
    "ops:fix-tokens": "node scripts/fix-n8n-refresh-tokens.js",
    "ops:test-flow": "node scripts/test-complete-flow.js",
    "ops:diagnose": "node scripts/diagnose-oauth-token-sync.js",
    "ops:auto-fix": "node scripts/auto-fix-oauth-issues.js",
    "ops:all": "npm run ops:health && npm run ops:validate-creds && npm run ops:test-flow",
    "ops:full-diagnostic": "npm run ops:diagnose && npm run ops:auto-fix"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/lib/**/*.js",
      "!src/lib/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.74.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "moment-timezone": "^0.5.43",
    "node-fetch": "^3.3.2",
    "openai": "^6.2.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-helmet": "^6.1.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.9.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "floworx",
    "profile",
    "n8n",
    "automation",
    "business",
    "template",
    "error-handling",
    "performance",
    "caching"
  ],
  "author": "Floworx Team",
  "license": "MIT"
}
