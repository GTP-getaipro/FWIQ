{
  "name": "floworx-backend",
  "version": "1.0.0",
  "description": "FloWorx Backend API Server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node -r dotenv/config src/server.js dotenv_config_path=../.env",
    "start:dev": "node -r dotenv/config src/server.js dotenv_config_path=.env.development",
    "start:prod": "node -r dotenv/config src/server.js dotenv_config_path=.env.production",
    "dev": "nodemon -r dotenv/config src/server.js dotenv_config_path=.env.development",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "floworx",
    "email",
    "automation",
    "ai",
    "backend",
    "api"
  ],
  "author": "FloWorx Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.30.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.4",
    "openai": "^4.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
